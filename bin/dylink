#!/bin/sh
LIBPATH="$1"
if [ -z "$LIBPATH" ]; then
	LIBPATH="$DYLD_FALLBACK_LIBRARY_PATH"
fi

cd ~/lib
for DYDIR in `echo "$LIBPATH" | sed 's/^\.://;s/:/ /g'`; do
	for DYLIB in `find "$DYDIR" -name "*.dylib" -o -name "*.dylib.*" 2>/dev/null`; do
		ln -sf "$DYLIB"
	done
done
find . -xtype l | xargs rm 2>/dev/null
